        }
    </div>
    <div style="padding-right: 40px; font-size: 17px;float:right">
        @if (Model.Island.Ziemniaki)
        {
            <img src="@Url.Content("~/Images/ziemniaki.png")" style="width: 25px; height: 25px; margin-left:10px" />
        }
        @if (Model.Island.Chmiel)
        {
            <img src="@Url.Content("~/Images/chmiel.png")" style="width: 25px; height: 25px; margin-left:10px" />
        }
        @if (Model.Island.Zboze)
        {
            <img src="@Url.Content("~/Images/zboze.png")" style="width: 25px; height: 25px; margin-left:10px" />
        }
        @if (Model.Island.Papryka)
        {
